.background {
  width: 100%;
  height: 100%;
  position:fixed; 
  background-size:100% 100%;
  z-index: -1;
}
/**
顶部图片
*/
.imagesize {
  display: flex;
  justify-content: center;
}
.image {
  width: 400rpx;
  height: 400rpx;
  overflow:hidden;  
  display: block;  
  margin: 20rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}

.info {
  display: flex;
  flex-direction: column;
  text-align: center;
}

.feedback {
  width: 300rpx;
  height: 100rpx;
  background-color: transparent;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  bottom: 100rpx;
  margin-left: 225rpx;
  position: fixed;
}
.feedback::after {
  border: none;
}

.copyright{
  font-size: 20rpx;
  color: #fff;
  position: fixed;
  text-align: center;
  bottom: 40rpx;
  left: 0;
  right: 0;
}